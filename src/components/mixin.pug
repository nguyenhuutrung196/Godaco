	img(data-src="https://source.unsplash.com/random/?Cryptocurrency&1" alt="" class="object-cover w-full h-full lozad" x-img)

mixin ProductItem()
	a(class="product-item item" href="#")
		.img-src(class="img-ratio pt-[calc(182/280*100%)]")
			+PugImg()
		.content 
			.code PD-T75CSB
			h3 Built in stove
			.desc
				p Gas volume: 0.491 (kg/h)
				p Power: 6,874 (kW)
				p SCHOTT glasses

