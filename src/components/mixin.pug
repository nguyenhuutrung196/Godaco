mixin SlideNews1(post, image, date, title)
	.swiper-slide
		a(href= post class="")
			.news-slide-img
				img(src= image, alt="")
			.news-slide-date(class="flex py-5 items-center")
				<i class="fa-regular fa-clock pr-1"></i>
				p= date
			.news-slide-title
				h4= title

mixin ListNews2(post, image, date, title)
	.showListNews(class="hover:text-[#C4212B]")
		a(href= post class="hover:text-[#C4212B]")
			.news-slide-img
				img(src= image, alt="")
			.news-slide-date(class="flex py-5 items-center")
				<i class="fa-regular fa-clock pr-1"></i>
				p= date
			.news-slide-title(class="")
				h4= title

mixin ListNewsDetailPostRight(link, image, date, title)
	.showListPostNews(class="pb-4")
		a(href= link) 
			.post-list-detail(class="flex gap-4")
				.post-image
					img(src= image, alt="")
				.post-list-title
					.post-date(class="flex")
						<i class="fa-regular fa-clock pr-3"></i>
						span= date
					p= title
