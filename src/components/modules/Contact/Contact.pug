section.contact-page.py-20
    .img-bg(class="pt-[150px] relative")
        span.img1(class="relative top-[59px] left-[86px]")
            img(src="./img/contact/mussel2.png" alt="" class="")
        span.img2(class="relative top-[225px] right-[125px]")
