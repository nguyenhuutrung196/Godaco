			.box-content
				div(class="p-10 lg:py-0 flex flex-col justify-center gap-8 h-full")
					.icon
						img(src="./img/wwd/list/1.png", alt="")
					h2(class="global-text-48 text-blue-500 font-light") Aquaculture
					.btn-wrap
						a(href="#" class="btn btn-1")
